{
	"name": "sanitize-middleware",
	"version": "2.0.20",
	"description": "Connect/Express middleware that sanitizes requests to protect against cross-site scripting (XSS) and command injection attacks",
	"keywords": [
		"express",
		"middleware",
		"sanitization",
		"sanitize",
		"sanitisation",
		"sanitise",
		"xss"
	],
	"main": "dist/index.js",
	"repository": "git@github.com:Fdawgs/sanitize-middleware.git",
	"author": "Frazer Smith",
	"license": "MIT",
	"engines": {
		"node": ">=10.22.0"
	},
	"scripts": {
		"build-ts": "tsc && prettier dist/*.js --write",
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint src/. --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
		"prettier": "prettier . --write --ignore-path .gitignore",
		"start": "node src/index.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn test-only",
		"test-coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
		"test-only": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand"
	},
	"jest": {
		"clearMocks": true,
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"tsx"
		],
		"testEnvironment": "node",
		"testTimeout": 10000,
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		}
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^11.0.0",
		"@types/express": "^4.17.8",
		"@types/jest": "^26.0.14",
		"@types/lodash": "^4.14.162",
		"@types/node": "^14.11.10",
		"@types/sanitize-html": "^1.27.0",
		"@typescript-eslint/eslint-plugin": "^4.4.1",
		"@typescript-eslint/parser": "^4.4.1",
		"conventional-changelog-cli": "^2.1.0",
		"coveralls": "^3.1.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.11.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.13.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.0",
		"eslint-plugin-jsdoc": "^30.6.5",
		"eslint-plugin-json": "^2.1.2",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-security": "^1.4.0",
		"express": "^4.17.1",
		"faker": "^5.1.0",
		"jest": "^26.5.3",
		"jsinspect": "^0.12.7",
		"lodash": "^4.17.20",
		"node-mocks-http": "^1.9.0",
		"prettier": "2.1.2",
		"ts-jest": "^26.4.1",
		"typescript": "^4.0.3"
	},
	"dependencies": {
		"sanitize-html": "^2.1.0",
		"validator": "^13.1.17",
		"xss": "^1.0.8"
	}
}
