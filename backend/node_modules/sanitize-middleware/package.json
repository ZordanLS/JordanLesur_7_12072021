{
	"name": "sanitize-middleware",
	"version": "2.0.14",
	"description": "Connect/Express middleware that sanitizes requests to protect against cross-site scripting (XSS) and command injection attacks",
	"keywords": [
		"express",
		"middleware",
		"sanitization",
		"sanitize",
		"sanitisation",
		"sanitise",
		"xss"
	],
	"main": "dist/index.js",
	"repository": "git@github.com:Fdawgs/sanitize-middleware.git",
	"author": "Frazer Smith",
	"license": "MIT",
	"engines": {
		"node": ">=12.16.3"
	},
	"scripts": {
		"build-ts": "tsc && prettier dist/*.js --write",
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint src/. --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
		"prettier": "prettier . --write --ignore-path .gitignore",
		"start": "node src/index.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn test-only",
		"test-coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
		"test-only": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand"
	},
	"jest": {
		"clearMocks": true,
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"tsx"
		],
		"testEnvironment": "node",
		"testTimeout": 10000,
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		}
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^9.1.1",
		"@types/express": "^4.17.7",
		"@types/jest": "^26.0.7",
		"@types/lodash": "^4.14.158",
		"@types/node": "^14.0.26",
		"@types/sanitize-html": "^1.23.3",
		"@typescript-eslint/eslint-plugin": "^3.7.0",
		"@typescript-eslint/parser": "^3.7.0",
		"conventional-changelog-cli": "^2.0.34",
		"coveralls": "^3.1.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.5.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jest": "^23.18.2",
		"eslint-plugin-jsdoc": "^30.0.3",
		"eslint-plugin-json": "^2.1.2",
		"eslint-plugin-promise": "^4.2.1",
		"express": "^4.17.1",
		"faker": "^4.1.0",
		"jest": "^26.1.0",
		"jsinspect": "^0.12.7",
		"lodash": "^4.17.19",
		"node-mocks-http": "^1.8.1",
		"prettier": "2.0.5",
		"ts-jest": "^26.1.3",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"sanitize-html": "^1.27.1",
		"validator": "^13.1.1",
		"xss": "^1.0.7"
	}
}
